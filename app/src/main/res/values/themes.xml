<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WoodenTangramPuzzle2" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_gray_400</item>
        <item name="colorPrimaryVariant">@color/dark_gray_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray_300</item>
        <item name="colorSecondaryVariant">@color/gray_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WoodenTangramPuzzle2.Fullscreen" parent="Theme.WoodenTangramPuzzle2">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.WoodenTangramPuzzle2.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.WoodenTangramPuzzle2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/gray_400</item>
        <item name="fullscreenTextColor">@color/light_gray_300</item>
    </style>
</resources>